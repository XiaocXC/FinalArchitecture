<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_tip"
        android:layout_width="38dp"
        android:layout_height="6dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fluid_music_shape_player_control_top_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_albumArt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fluid_music_guideline"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/fluid_music_guideline3"
        app:layout_constraintStart_toStartOf="@+id/fluid_music_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/view_tip"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Architecture.SmallComponent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fluid_music_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />

    <TextView
        android:id="@+id/tv_music_title"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lines="1"
        app:layout_constraintEnd_toStartOf="@+id/fluid_music_guideline3"
        app:layout_constraintStart_toStartOf="@+id/fluid_music_guideline2"
        app:layout_constraintTop_toTopOf="@+id/fluid_music_guideline"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_music_subtitle"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_music_title"
        app:layout_constraintStart_toStartOf="@+id/tv_music_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_title"
        tools:text="SubTitle" />

    <com.google.android.material.slider.Slider
        android:id="@+id/seekbar_progress"
        style="@style/Widget.Material3.Slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/fluid_music_guideline5"
        app:layout_constraintEnd_toStartOf="@+id/fluid_music_guideline3"
        app:layout_constraintStart_toStartOf="@+id/fluid_music_guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_subtitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pause_resume"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/Widget.Architecture.NoInsetButton"
        app:iconSize="64dp"
        app:iconGravity="textStart"
        app:icon="@drawable/fluid_music_player_pause"
        app:layout_constraintBottom_toTopOf="@+id/fluid_music_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/fluid_music_guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fluid_music_guideline5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fluid_music_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fluid_music_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fluid_music_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fluid_music_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />
</androidx.constraintlayout.widget.ConstraintLayout>
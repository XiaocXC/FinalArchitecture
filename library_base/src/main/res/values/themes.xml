<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- APP主题 -->
    <style name="Base_Theme.FinalArchitecture" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/base_purple_500</item>
        <item name="colorPrimaryVariant">@color/base_purple_700</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- 次色调 -->
        <item name="colorSecondary">@color/base_teal_200</item>
        <item name="colorSecondaryVariant">@color/base_teal_700</item>
        <item name="colorOnSecondary">@color/base_black</item>

        <!--  设置透明状态栏，适合浅色时的状态栏  -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/base_white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 禁用强制暗黑模式  -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- APP主题 -->
    <style name="Base_Theme.FinalArchitecture" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/base_purple_500</item>
        <item name="colorPrimaryVariant">@color/base_purple_700</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- 次色调 -->
        <item name="colorSecondary">@color/base_teal_200</item>
        <item name="colorSecondaryVariant">@color/base_teal_700</item>
        <item name="colorOnSecondary">@color/base_black</item>

        <!--  设置透明状态栏，适合浅色时的状态栏  -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/base_white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 禁用强制暗黑模式  -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!-- 绝活！ -->
    <!-- 小型圆角 -->
    <style name="ShapeAppearance.Architecture.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <!-- 中型圆角 -->
    <style name="ShapeAppearance.Architecture.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- 大型圆角 -->
    <style name="ShapeAppearance.Architecture.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- 极小样式的加载条 -->
    <style name="Widget.Architecture.Progress.ExtraSmall" parent="Widget.MaterialComponents.CircularProgressIndicator" tools:ignore="ResourceName">
        <item name="trackThickness">2.5dp</item>
        <item name="indicatorSize">20dp</item>
        <item name="indicatorInset">2dp</item>
    </style>

    <!-- Icon（无边衬）样式按钮 -->
    <style name="Widget.Architecture.NoInsetButton" parent="Widget.MaterialComponents.Button.OutlinedButton" tools:ignore="ResourceName">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Architecture.SmallComponent</item>
    </style>
</resources>
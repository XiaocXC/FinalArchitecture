<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- APP主题 -->
    <style name="Base_Theme.FinalArchitecture" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/base_blue_100</item>
        <item name="colorOnPrimary">@color/base_blue_700</item>
        <item name="colorPrimaryContainer">@color/base_light_blue_200</item>
        <item name="colorOnPrimaryContainer">@color/base_hard_blue_700</item>
        <!-- 次色调 -->
        <item name="colorSecondary">@color/base_hard_blue_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/base_light_blue_300</item>
        <item name="colorOnSecondaryContainer">@color/base_hard_blue_650</item>
        <!-- 第三色调 -->
        <item name="colorTertiary">@color/base_blue_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/base_light_blue_500</item>
        <item name="colorOnTertiaryContainer">@color/base_hard_blue_750</item>

        <!-- 背景色 -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/base_black_700</item>
        <item name="colorSurface">@color/base_white</item>
        <item name="colorOnSurface">@color/base_black_700</item>
        <item name="colorOutline">@color/base_grey_600</item>
        <item name="colorSurfaceVariant">@color/base_grey_200</item>
        <item name="colorOnSurfaceVariant">@color/base_grey_700</item>

        <!--  设置透明状态栏，适合浅色时的状态栏  -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 禁用强制暗黑模式  -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!-- 绝活！ -->
    <!-- 小型圆角 -->
    <style name="ShapeAppearance.Architecture.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <!-- 中型圆角 -->
    <style name="ShapeAppearance.Architecture.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- 大型圆角 -->
    <style name="ShapeAppearance.Architecture.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- 极小样式的加载条 -->
    <style name="Widget.Architecture.Progress.ExtraSmall" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall" tools:ignore="ResourceName">
        <item name="trackThickness">2.5dp</item>
        <item name="indicatorSize">20dp</item>
        <item name="indicatorInset">2dp</item>
    </style>

    <!-- Icon（无边衬）样式按钮 -->
    <style name="Widget.Architecture.NoInsetButton" parent="Widget.Material3.Button.OutlinedButton" tools:ignore="ResourceName">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Architecture.SmallComponent
        </item>
    </style>

    <!-- 底部导航栏选中Style -->
    <style name="Widget.Architecture.BottomNavigationView.ActiveIndicator.NoColor" parent="Widget.MaterialComponents.BottomNavigationView" tools:ignore="ResourceName">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">21dp</item>
        <item name="android:background">@color/base_white</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- APP主题 -->
    <style name="Base_Theme.FinalArchitecture" parent="Theme.Material3.DayNight.NoActionBar">

        <!--  设置透明状态栏，适合浅色时的状态栏  -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 禁用强制暗黑模式  -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!-- 绝活！ -->
    <!-- 小型圆角 -->
    <style name="ShapeAppearance.Architecture.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <!-- 中型圆角 -->
    <style name="ShapeAppearance.Architecture.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- 大型圆角 -->
    <style name="ShapeAppearance.Architecture.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- 圆形 -->
    <style name="ShapeAppearance.Architecture.Circle" parent="ShapeAppearance.Material3.LargeComponent" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 极小样式的加载条 -->
    <style name="Widget.Architecture.Progress.ExtraSmall" parent="Widget.Material3.CircularProgressIndicator.ExtraSmall" tools:ignore="ResourceName">
        <item name="trackThickness">2.5dp</item>
        <item name="indicatorSize">20dp</item>
        <item name="indicatorInset">2dp</item>
    </style>

    <!-- Gather统一按钮样式（填充样式） -->
    <style name="Widget.Architecture.BaseButton" parent="Widget.Material3.Button" tools:ignore="ResourceName">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Architecture.MediumComponent</item>
    </style>

    <!-- Icon（无边衬）样式按钮 -->
    <style name="Widget.Architecture.NoInsetButton" parent="Widget.Material3.Button.OutlinedButton" tools:ignore="ResourceName">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Architecture.SmallComponent
        </item>
    </style>

    <!-- 统一输入框样式 -->
    <style name="Widget.Architecture.TextInputLayout" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense" tools:ignore="ResourceName">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/textInputLayout_bg</item>
    </style>

    <!-- 底部导航栏选中Style -->
    <style name="Widget.Architecture.BottomNavigationView.ActiveIndicator.NoColor" parent="Widget.MaterialComponents.BottomNavigationView" tools:ignore="ResourceName">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">21dp</item>
        <item name="android:background">@color/base_white</item>
    </style>

    <!-- 输入框背景颜色 -->
    <color name="textInputLayout_bg" tools:ignore="ResourceName">@color/base_grey_light_200</color>

    <!--ShapeableImageView 圆角-->
    <style name="base_RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>
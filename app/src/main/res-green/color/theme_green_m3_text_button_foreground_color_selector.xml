<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:alpha="@dimen/material_emphasis_disabled" android:color="@color/theme_green_md_colorOnSurface" android:state_enabled="false" />

    <!-- Uncheckable -->
    <item android:color="@color/theme_green_md_colorPrimary" android:state_checkable="false" />

    <!-- Checked Buttons. -->
    <item android:color="@color/theme_green_md_colorOnSecondaryContainer" android:state_checked="true" />

    <!-- Not-checked Buttons. -->
    <item android:color="@color/theme_green_md_colorOnSurface" />
</selector>
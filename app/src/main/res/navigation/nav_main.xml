<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.zjl.finalarchitecture.module.main.ui.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/zoom_small_in"
            app:exitAnim="@anim/zoom_small_out"/>
        <action
            android:id="@+id/action_mainFragment_to_systemDetailArrFragment"
            app:destination="@id/systemDetailArrFragment" />
    </fragment>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.zjl.finalarchitecture.module.search.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/systemDetailArrFragment"
        android:name="com.zjl.finalarchitecture.module.sysnav.ui.fragment.SystemDetailArrFragment"
        android:label="SystemDetailArrFragment">

        <argument
            android:name="detailData"
            app:argType="com.zjl.finalarchitecture.data.model.SystemVO"/>

        <argument
            android:name="index"
            app:argType="integer"/>

    </fragment>


</navigation>
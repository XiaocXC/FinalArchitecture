        <!-- 主色调 -->
        <item name="colorPrimary">@color/md_colorPrimary</item>
        <item name="colorOnPrimary">@color/md_colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/md_colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_colorOnPrimaryContainer</item>
        <!-- 次色调 -->
        <item name="colorSecondary">@color/md_colorSecondary</item>

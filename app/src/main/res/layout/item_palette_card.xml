<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        tools:text="日间"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/primary"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@+id/primaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Primary" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/primaryContainer"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/primary"
                app:layout_constraintTop_toTopOf="@+id/primary">

                <TextView
                    android:id="@+id/tvPrimaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="PrimaryContainer" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/onPrimaryContainer"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/primaryContainer"
                app:layout_constraintTop_toBottomOf="@+id/primary">

                <TextView
                    android:id="@+id/tvOnPrimaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="OnPrimaryContainer" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/secondary"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@+id/SecondaryContainer"
                app:layout_constraintStart_toStartOf="@+id/primary"
                app:layout_constraintTop_toBottomOf="@+id/primary">

                <TextView
                    android:id="@+id/tvSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Secondary" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/SecondaryContainer"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/secondary"
                app:layout_constraintTop_toBottomOf="@+id/primary">

                <TextView
                    android:id="@+id/tvSecondaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="SecondaryContainer" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Tertiary"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@+id/TertiaryContainer"
                app:layout_constraintStart_toStartOf="@+id/primary"
                app:layout_constraintTop_toBottomOf="@+id/secondary">

                <TextView
                    android:id="@+id/tvTertiary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Tertiary" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/TertiaryContainer"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/primary"
                app:layout_constraintTop_toTopOf="@+id/Tertiary">

                <TextView
                    android:id="@+id/tvTertiaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="TertiaryContainer" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Error"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@+id/ErrorContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TertiaryContainer">

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Error" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ErrorContainer"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Error"
                app:layout_constraintTop_toTopOf="@+id/Error">

                <TextView
                    android:id="@+id/tvErrorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="ErrorContainer" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Background"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toStartOf="@+id/Surface"
                app:layout_constraintStart_toStartOf="@+id/primary"
                app:layout_constraintTop_toBottomOf="@+id/Error">

                <TextView
                    android:id="@+id/tvBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Background" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/Surface"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/primary"
                app:layout_constraintTop_toTopOf="@+id/Background">

                <TextView
                    android:id="@+id/tvSurface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="6dp"
                    android:text="Surface" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
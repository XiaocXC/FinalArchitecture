<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingVertical="6dp">

    <TextView
        android:id="@+id/tvFoodName"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnFoodMinus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Food" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFoodAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Architecture.NoInsetButton"
        android:minWidth="0dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFoodNum"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnFoodAdd"
        app:layout_constraintEnd_toStartOf="@+id/btnFoodAdd"
        app:layout_constraintTop_toTopOf="@+id/btnFoodAdd" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFoodMinus"
        style="@style/Widget.Architecture.NoInsetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:enabled="false"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/tvFoodNum"
        app:layout_constraintTop_toTopOf="@+id/btnFoodAdd" />
</androidx.constraintlayout.widget.ConstraintLayout>
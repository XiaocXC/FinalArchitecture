<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    android:minHeight="?listPreferredItemHeight"
    android:paddingEnd="?listPreferredItemPaddingEnd"
    android:paddingStart="?listPreferredItemPaddingStart"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:ignore="RtlSymmetry"
    android:id="@+id/expandRoot"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/expandTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textAppearance="?textAppearanceListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <TextView
        android:id="@+id/expandDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/expandTitle"
        app:layout_constraintStart_toStartOf="@id/expandTitle"
        app:layout_constraintTop_toBottomOf="@id/expandTitle"
        tools:text="11:11"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/expandDesc"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/expandTitle"
        app:layout_constraintTop_toBottomOf="@+id/expandDuration"
        tools:text="description"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnDetail"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="点击查看详情"
        app:layout_constraintStart_toStartOf="@id/expandTitle"
        app:layout_constraintTop_toBottomOf="@id/expandDesc"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>